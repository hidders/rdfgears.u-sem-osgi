<?xml version="1.0" encoding="UTF-8"?>
<rdfgears>
  <metadata>
    <id>imreal-usem-simple-groupTwitterLanguageDetection</id>
    <name>groupTwitterLanguageDetection</name>
    <description>The service takes as input a list of Twitter IDs (whitespace delimited, e.g. "twitterid1 twittered") and collects the users' past 200 tweets. It determines the language for each one of them. The output lists all observed languages including their aggregated frequency across all users.</description>
    <category>imreal-usem-simple</category>
    <password/>
  </metadata>
  <workflow>
    <workflowInputList x="294" y="70">
      <workflowInputPort name="Twitter usernames">
        <type>
          <var name="a3"/>
        </type>
      </workflowInputPort>
    </workflowInputList>
    <network output="node_4" x="763" y="167">
      <output-type>
        <var name="a6"/>
      </output-type>
      <processor id="node_4" x="440" y="129">
        <function type="custom-java">
          <config param="implementation">nl.tudelft.rdfgears.rgl.function.imreal.TwitterLanguageDetector</config>
        </function>
        <inputPort name="username" iterate="false">
          <source workflowInputPort="Twitter usernames"/>
        </inputPort>
        <inputPort name="uuid" iterate="false">
          <source processor="node_5"/>
        </inputPort>
        <inputPort name="friendsOfUser" iterate="false">
          <source processor="node_16"/>
        </inputPort>
      </processor>
      <processor id="node_5" x="290" y="219">
        <function type="constant">
          <config param="value">""</config>
        </function>
      </processor>
      <processor id="node_16" x="290" y="298">
        <function type="constant">
          <config param="value">"false"</config>
        </function>
      </processor>
    </network>
  </workflow>
</rdfgears>
